@model PizzaShopApplication.Models.Data.Pizza;
<h3>Изменение продукта</h3>

<form asp-action="SaveChangesInDB" asp-controller="Product" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="All"></div>
    <div>
        <div class="form-group">
            <label asp-for="Name">Наименование</label>
            <input type="text" asp-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Price">Цена</label>
            <input type="text" asp-for="Price" />
        </div>
        <div class="form-group">
            <label asp-for="Diameter">Диаметр пиццы</label>
            <input type="number" asp-for="Diameter" />
        </div>
        <div class="form-group">
            <label asp-for="Novelty">Новинка</label>
            <input type="checkbox" asp-for="Novelty" />
        </div>
        <div class="form-group">
            <label asp-for="Bestseller">Хит</label>
            <input type="checkbox" asp-for="Bestseller" />
        </div>
        <div class="form-group">
            <label asp-for="Discount">Скидка</label>
            <input type="checkbox" asp-for="Discount" />
        </div>
        <div class="form-group">
            <input hidden type="number" name="itemId" asp-for="Id" />
            <input type="submit" value="Подтвердить изменения" class="btn btn-outline-dark" />
        </div>
    </div>
</form>