@{
    ViewData["Title"] = "Изменение пароля";
}
@using PizzaShopApplication.Models.Data.Entities;
@model User
<form asp-action="EditPizza" asp-controller="Product" asp-anti-forgery="true" enctype="multipart/form-data">
    <div>
        <p>Введите старый пароль:</p>
        <input type="password" name="oldPassword" />
        <p>Введите новый пароль:</p>
        <input type="password" name="newPassword" />
        <input type="hidden" asp-for="Id" />
        <input asp-action="ChangePassword" asp-controller="Account" formmethod="post" type="submit" value="Изменить пароль" class="btn btn-outline-dark" />
    </div>
</form>
        
